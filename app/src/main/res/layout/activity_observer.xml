<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_jump_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到第二个页面" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_jump_two"
        android:text="发送粘性事件到第二个界面" />

    <Button
        android:id="@+id/button_start_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_send"
        android:text="发送粘性事件到第二个界面" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0022"
        android:textColor="#000000"
        android:layout_below="@+id/button_start_three"/>

    <TextView
        android:id="@+id/text_view_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0022"
        android:textColor="#000000"
        android:layout_below="@+id/text_view"/>

</RelativeLayout>